<%= render 'shared/navbar' %>

<div class="container mt-3">

  <h1>Book: <%= @post.title %></h1>
  <p> <%= @post.user.first_name.capitalize %> is the owner of this CATEGORY MISSING IN POST </p>

  <%= simple_form_for [@post, @booking] do |f| %>
  <%= f.input :start_date, html5: true %>
  <%= f.input :end_date, html5: true %>
  <%= f.submit "request", class: "btn btn-primary" %>
  <% end %>

</div>
