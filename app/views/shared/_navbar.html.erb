<div class="navbar navbar-expand-sm navbar-light navbar-lewagon spaced-navbar">
  <%= link_to root_path, class: "navbar-brand" do %>
    <ul class="navbar-nav mr-auto">
      <li class="hotel-name">Hacienda CSQ</li>
    </ul>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div>
    <ul class="navbar-nav mr-auto">
      <li><%= link_to "Rooms", root_path, class: "nav-link" %></li>
      <li><%= link_to "Photo Tours", root_path, class: "nav-link" %></li>
      <li><%= link_to "Amenities", root_path, class: "nav-link" %></li>
      <li><%= link_to "City & Culture", root_path, class: "nav-link" %></li>
      <li><%= link_to "Events", root_path, class: "nav-link" %></li>
      <li><%= link_to "About", root_path, class: "nav-link" %></li>
      <li><%= link_to "Press", root_path, class: "nav-link" %></li>
    </ul>
  </div>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <%= image_tag "#{current_user.photo}", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown" style="border-radius: 5px 0px 5px 5px;">
            <%= link_to "My Profile", bookings_path, class: "dropdown-item" %>
            <%= link_to "Lease with us", new_post_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign Up", new_user_registration_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
