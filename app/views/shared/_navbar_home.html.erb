<div class="navbar navbar-expand-sm navbar-dark navbar-lewagon navbar-transparent">
  <%= link_to root_path, class: "navbar-brand" do %>
    <ul class="navbar-nav mr-auto">
      <li>Hacienda CSQs</li>
    </ul>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div>
    <ul class="navbar-nav mr-auto">
      <li>Rooms</li>
      <li>lihoto Tour</li>
      <li>Amenities</li>
      <li>City & Culture</li>
      <li>Events</li>
      <li>About</li>
      <li>Press</li>
    </ul>
  </div>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "My Profile", bookings_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "#{current_user.photo}", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Create a post", new_post_path, class: "dropdown-item" %>
            <%= link_to "Edit profile", edit_user_registration_path(current_user), class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "btn btn-outline-light mr-3 round" %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-outline-light round" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
